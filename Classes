class enemyship:
    def __init__(self):
        self.maxhealth= 40
        self.health= 40
        self.size= 3
class strongship(enemyship):
    def __init__(self):
        super().__init__()
        self.speed = 2
        self.damage = 10
        self.attackspeed = 1
        self.healthm = 1 
    def shoot(self):
        pass

class fastship(enemyship):
    def __init__(self):
        super().__init__()
        self.speed = 4
        self.damage = 5
        self.attackspeed = 2
    def shoot(self):
        pass

class buffship(enemyship):
    def __init__(self,bufftype):
        super().__init__()
        self.speed = 3
        self.bufftype = None
        self.buff = 1
        self.range = 1
    def buff(self):
        pass


